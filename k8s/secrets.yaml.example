apiVersion: v1
kind: Secret
metadata:
  name: solsbot-secrets
  namespace: solsbot
  labels:
    app.kubernetes.io/name: solsbot-helper
    app.kubernetes.io/component: discord-bot
type: Opaque
stringData:
  # =============================================================================
  # ⚠️  DO NOT COMMIT THIS FILE WITH REAL VALUES TO GIT!
  # 
  # RECOMMENDED: Use kubectl to create secrets directly:
  #
  #   kubectl create secret generic solsbot-secrets \
  #     --namespace=solsbot \
  #     --from-literal=DB_URL='mysql://USERNAME:PASSWORD@HOST:3306/DATABASE' \
  #     --from-literal=BOT_TOKEN='your-discord-bot-token' \
  #     --from-literal=SOLS_BOT_TOKEN='your-sols-api-token'
  #
  # =============================================================================
  
  # MySQL/MariaDB connection string for Tortoise ORM with asyncmy driver
  # Format: mysql://username:password@host:port/database_name
  # 
  # Examples:
  #   Local:    mysql://solsbot:mypassword@localhost:3306/solsbot_db
  #   AWS RDS:  mysql://solsbot:mypassword@mydb.abc123.us-east-1.rds.amazonaws.com:3306/solsbot_db
  #   In-Cluster: mysql://solsbot:mypassword@mysql-service.solsbot.svc.cluster.local:3306/solsbot_db
  # 
  # ⚠️  Update the password below to match MYSQL_PASSWORD in k8s/mysql.yaml (decode base64)
  DB_URL: "mysql://solsbot:CHANGE_ME_USER_PASSWORD@mysql-service.solsbot.svc.cluster.local:3306/solsbot_db"
  
  # Discord Bot Token from https://discord.com/developers/applications
  BOT_TOKEN: "REPLACE_WITH_YOUR_DISCORD_BOT_TOKEN"
  
  # Sol's RNG API token from Mongoosee (for WebSocket authentication)
  SOLS_BOT_TOKEN: "REPLACE_WITH_YOUR_SOLS_API_TOKEN"
